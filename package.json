{
  "name": "pointme",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "cross-env NODE_OPTIONS='--max_old_space_size=4096' next build",
    "prebuild": "npm run typecheck && npm run lint",
    "typecheck": "tsc --noEmit",
    "start": "next start",
    "lint": "next lint",
    "db:setup": "node scripts/db-setup.mjs",
    "db:seed": "node scripts/populate-test-data.mjs",
    "build:android": "ts-node scripts/build-apk.ts",
    "build:apk": "npm run build && npm run build:android"
  },
  "dependencies": {
    "@capacitor/android": "^7.0.1",
    "@capacitor/core": "^7.0.1",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/supabase-js": "^2.48.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "framer-motion": "^12.0.1",
    "next": "14.0.4",
    "next-pwa": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.1",
    "react-icons": "^5.4.0",
    "resend": "^4.1.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@bubblewrap/cli": "^1.22.3",
    "@capacitor/cli": "^7.0.1",
    "@eslint/eslintrc": "^3",
    "@next/eslint-plugin-next": "^15.1.6",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/slice-ansi": "^5.0.2",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.0.4",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "typescript": {
    "strict": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  }
}
